{
  	fg[NORMAL]	= "#404040"
}

style "clearlooks-panel" = "clearlooks-default"
{
  xthickness = 3
  ythickness = 3
}

style "clearlooks-tooltips" = "clearlooks-default"
{
  xthickness = 4
  ythickness = 4
  	bg[NORMAL] 	= { 1.0,1.0,0.75 }
}

style "clearlooks-progressbar" = "clearlooks-default"
{
  xthickness = 0
  ythickness = 0
  	fg[NORMAL]  	= "#4B473C"
  	fg[PRELIGHT]  	= "#FFFFFF"
  	bg[NORMAL] 	= "#E6E1D7"
}

style "clearlooks-combo" = "clearlooks-default"
{
  xthickness = 1
  ythickness = 2
  	bg[NORMAL] 	= "#EBE8E5"
  	bg[PRELIGHT] 	= "#F1EEEB"
	fg[NORMAL]       = "#6D6654"
	fg[PRELIGHT]     	= "#57503E"
}

style "clearlooks-scrollbar" = "clearlooks-default"
{
	bg[NORMAL]    	= "#E3E0D9"
	bg[PRELIGHT]    	= "#EBE8E5"
	fg[NORMAL]       = "#6D6654"
	fg[PRELIGHT]     	= "#57503E"
	fg[ACTIVE]     	= "#ffffff"
}

